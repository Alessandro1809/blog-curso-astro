---

import { Formateer } from '@/utils/formateer';
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';

interface Props{
    post: CollectionEntry<'blog'>;
}

const {post} = Astro.props;
const frontmatter = post.data;


---

<div class="lg:flex">
    <Image class="object-cover w-full h-56 rounded-lg lg:w-64" src={frontmatter.image} alt={frontmatter.title}
    width="200" height="200" quality={'low'} format={'webp'} loading={'lazy'} transition:name={`${post.slug}-image`} />

    <div class="flex flex-col justify-between py-6 lg:mx-6">
        <a href={`/posts/${post.slug}`} class="text-xl font-semibold hover:cursor-pointer hover:underline text-white ">
           {frontmatter.description}
        </a>
        
        <span class="text-sm text-gray-500 dark:text-gray-300">{Formateer.formatDate(frontmatter.date)}</span>
    </div>
</div>