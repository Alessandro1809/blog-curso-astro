---
import MainLayout from '../layouts/MainLayout.astro';
import { siteConfig } from '../config/site-config';
import BlogPost from '../components/BlogPost.astro';

const posts = await Astro.glob('./posts/*.{md,mdx}');


---
<MainLayout title="Alessandro's blog">
<section >
    <div class="container px-6 py-10 mx-auto">
       
	<h1 class="text-4xl font-bold h-20 w-96 bg-gradient-to-r from-gray-400 via-green-400 to-white text-transparent bg-clip-text">{siteConfig.title}</h1>

        <div class="grid grid-cols-1 gap-8 mt-8 md:mt-4 md:grid-cols-2">
           
			{
				posts.map((post) => <BlogPost {...post}/>)
			}

          
        </div>
    </div>
</section>
</MainLayout>